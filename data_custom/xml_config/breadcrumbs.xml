<breadcrumbs>
    <!-- Admin etc -->
	<substitution match_key="cms:cms">
		<link label="{!HOME}">:</link>
	</substitution>
	<substitution match_key="adminzone:_WILD_NOT_START:.*">
		<link label="{!ADMIN_ZONE}">adminzone:</link>
	</substitution>
	<substitution match_key="adminzone:start">
		<link label="{!HOME}">:</link>
	</substitution>
	<substitution match_key="collaboration:_WILD_NOT_START">
		<link label="{!COLLABORATION}">collaboration:</link>
	</substitution>
	<substitution match_key="collaboration:start">
		<link label="{!HOME}">:</link>
	</substitution>

    <!-- Docs -->
	<substitution match_key="docs:_WILD_NOT_START">
		<link label="Tutorials">docs:tutorials</link>
	</substitution>
	<substitution match_key="docs:tutorials">
		<link label="{!HOME}">:</link>
	</substitution>

	<substitution match_key="forum:forumview">
		<link label="{!HOME}">:</link>
	</substitution>

    <!-- ocProducts -->
	<substitution match_key="ocproducts:_WILD_NOT_START:.*">
		<link label="ocProducts">ocproducts:</link>
	</substitution>
	<substitution match_key="ocproducts:start">
		<link label="{!HOME}">:</link>
	</substitution>

    <!-- Support pages -->
	<substitution match_key=":contact">
		<link label="{!HOME}">:</link>
		<link label="Support">:support</link>
	</substitution>
	<substitution match_key=":professional_support">
		<link label="{!HOME}">:</link>
		<link label="Support">:support</link>
	</substitution>
	<substitution match_key=":purchase">
		<link label="{!HOME}">:</link>
		<link label="Support">:support</link>
		<link label="Professional support">:professional_support</link>
	</substitution>
	<substitution match_key=":tickets">
		<link label="{!HOME}">:</link>
		<link label="Support">:support</link>
	</substitution>

    <!-- Community pages -->
	<substitution match_key=":stars">
		<link label="{!HOME}">:</link>
		<link label="Community">:community</link>
	</substitution>
	<substitution match_key="forum:">
		<link label="{!HOME}">:</link>
		<link label="Community">:community</link>
	</substitution>
	<substitution match_key=":chat">
		<link label="{!HOME}">:</link>
		<link label="Community">:community</link>
	</substitution>

    <!-- Features pages -->
	<substitution match_key=":antifeatures">
		<link label="{!HOME}">:</link>
		<link label="Features">:features</link>
	</substitution>

    <!-- Special cases for modules -->
	<substitution match_key=":news:view:blog=1">
		<link label="{!HOME}">:</link>
	</substitution>
	<substitution match_key=":catalogues:category">
		<link label="{!HOME}">:</link>
	</substitution>

    <!-- Pointing back to home in general (lowest precedence) -->
	<substitution match_key=":_WILD_NOT_START:browse">
		<link label="{!HOME}">:</link>
	</substitution>
	<substitution match_key=":_WILD_NOT_START">
		<link label="{!HOME}">:</link>
	</substitution>
</breadcrumbs>
